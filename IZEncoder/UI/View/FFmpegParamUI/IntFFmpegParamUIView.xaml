<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="IZEncoder.UI.View.FFmpegParamUI.IntFFmpegParamUIView"
    mc:Ignorable="d">
    <Grid>
        <mah:NumericUpDown x:Name="nud"
                           Interval="{Binding ParamUI.Interval}"
                           ToolTip="{Binding ParamUI.ToolTip}"
                           Minimum="{Binding ParamUI.MinValue}"
                           Maximum="{Binding ParamUI.MaxValue}"
                           StringFormat="{Binding ParamUI.StringFormat}"
                           SelectAllOnFocus="True"
                           mah:TextBoxHelper.Watermark="{Binding ParamUI.NullText}" />
    </Grid>
</UserControl>